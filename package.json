{
  "name": "zyra-lang",
  "version": "1.0.0",
  "description": "Zyra Programming Language - A modern web development language",
  "bin": {
    "zyra": "./bin/zyra"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo \"Building Zyra project...\" && mkdir -p dist && cp -r examples/professional/* dist/",
    "serve": "npm run build && npm start",
    "postinstall": "node scripts/install.js"
  },
  "keywords": [
    "zyra",
    "language",
    "programming",
    "web",
    "development"
  ],
  "author": "Zyra Team",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^8.3.0",
    "express": "^4.18.2",
    "glob": "^7.2.0",
    "node-pty": "^0.10.1",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.22"
  }
}
